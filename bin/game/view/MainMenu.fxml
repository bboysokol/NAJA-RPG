            <Label text="Witaj w mojej pierwszej grze RPG bazowanej na okienkowej javie! ;)" textFill="WHITE">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <Separator prefHeight="44.0" prefWidth="500.0">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <padding>
                  <Insets top="20.0" />
               </padding>
            </Separator>
         </children>
         <BorderPane.margin>
            <Insets top="30.0" />
         </BorderPane.margin>
      </VBox>
   </top>
   <center>
      <VBox alignment="CENTER" prefHeight="228.0" prefWidth="500.0" spacing="30.0" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#showNewGame" style="-fx-background-color: none; -fx-font-size: 20;" text="Nowa gra" textFill="WHITE">
               <font>
                  <Font size="14.0" />
               </font></Button>
            <Button fx:id="grads" disable="true" mnemonicParsing="false" onAction="#continueGame" style="-fx-background-color: none; -fx-font-size: 20;" text="Kontynuuj" textFill="WHITE" />
            <Button mnemonicParsing="false" onAction="#exitGame" style="-fx-background-color: none; -fx-font-size: 20;" text="WyjdÅº" textFill="WHITE" />
         </children>
      </VBox>
   </center>
</BorderPane>
