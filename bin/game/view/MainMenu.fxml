<BorderPane prefHeight="400.0" prefWidth="500.0" style="-fx-font-family: Raleway;" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="game.view.MainMenuController">
   <top>
      <VBox alignment="TOP_CENTER" prefHeight="98.0" prefWidth="500.0" BorderPane.alignment="CENTER">
         <children>
            <Label alignment="CENTER" contentDisplay="CENTER" style="-fx-font-size: 28;" text="Naja RPG" textAlignment="CENTER" textFill="WHITE">
